    .heading{
        text-align: center;
        color: white;
    }
    body{
        text-align: center;
        background-color:dimgrey;
        margin: 10px;
        padding: 2rem;
        border-radius: 10px;
    }
</style>
<body>
    
    <h2 class="heading">Profile</h2>
    
    <table >
        <tr>
