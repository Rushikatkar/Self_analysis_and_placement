            <th>Domain</th>
        </tr>
        <% if(profiledata.length > 0){ %>
            <% for(var i=0; i<profiledata.length; i++){ %>
                <tr>
                    <td> <%- profiledata[i].name %> </td>
                    <td><%- profiledata[i].email %> </td>
                    <td><%- profiledata[i].marks %> </td>
                    <td><%- profiledata[i].cgpa %> </td>
                    <td><%- profiledata[i].backlogs %> </td>
                    <td><%- profiledata[i].domain %> </td>
                </tr>
                <% } %>
